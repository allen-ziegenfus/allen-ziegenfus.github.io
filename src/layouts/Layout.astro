---
import SearchBar from "../components/SearchBar.jsx";
export interface Props {
  title: string;
}

const { title} = Astro.props;

---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-6xl m-auto p-6">
    <header class="text-center py-5 relative">
      <a href="/"><h1 class="text-2xl">Werkverzeichnis von Vollrad Kutscher 1968 bis 2000</h1></a
      >
      <SearchBar client:load></SearchBar>
    </header>
    <slot />
    <footer class="py-3">
      <p>Copyright Â© 2023 Vollradkutscher-Werkverzeichnis.de</p>
    </footer>
  </body>
</html>
