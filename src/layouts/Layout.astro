---
import SearchBar from "../components/SearchBar.jsx";
import {
  Work, getWerkgruppen
} from "../werkverzeichnis/werkgruppen";
import { importRemoteImage } from "astro-imagetools/api";
export interface Props {
  title: string;
}

const { title} = Astro.props;

const werkgruppen = await getWerkgruppen();

let records = [];

werkgruppen.forEach(
  (workgroup) => (records = records.concat(workgroup.Records))
);

for (const record of records) {
  record.DownloadedThumbnail = record.Thumbnail
  if (record.Thumbnail.includes("http")) {
    record.DownloadedThumbnail = await importRemoteImage(record.Thumbnail);
  }
}
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-6xl m-auto p-6">
    <header class="text-center py-5 relative">
      <a href="/"><h1 class="text-2xl">Werkverzeichnis von Vollrad Kutscher 1968 bis 2000</h1></a
      >
      <SearchBar client:load records={records}></SearchBar>
    </header>
    <slot />
    <footer class="py-3">
      <p>Copyright Â© 2023 Vollradkutscher-Werkverzeichnis.de</p>
    </footer>
  </body>
</html>
