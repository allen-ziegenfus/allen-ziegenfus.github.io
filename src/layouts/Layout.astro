---
import SearchBar from "../components/SearchBar.jsx";
import werkgruppen from "../../public/werkgruppen.json";
import pages from "../../public/pages.json";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-6xl m-auto p-6 relative">
    <header class="sticky bg-white top-0">
      <div class="text-center py-5 relative">
        <a href="/"
          ><h1 class="text-2xl">
            Werkverzeichnis von Vollrad Kutscher 1968 bis 2000
          </h1></a
        >
        <SearchBar client:load />
      </div>

      <nav>
        <ul
          class="flex flex-row flex-wrap bg-gray-200 py-4 px-2 my-3 justify-center"
        >
          {
            pages.map((page) => (
              <li>
                <a
                  class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                  href={`/allgemein/${page.Slug}`}
                >
                  {page.Name}
                </a>
              </li>
            ))
          }
        </ul>
        <nav>
          <ul class="flex flex-row flex-wrap bg-gray-200 py-4 px-2 my-3">
            {
              werkgruppen.map((werkgruppe) => (
                <li class="py-2">
                  <a
                    class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                    href={`/${werkgruppe.Slug}`}
                  >
                    {werkgruppe.Titel}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </nav>
    </header>
    <div class=""></div>
    <slot />
    <footer class="py-3">
      <p>Copyright Â© 2023 Vollradkutscher-Werkverzeichnis.de</p>
    </footer>
  </body>
</html>
