---
import SearchBar from "../components/SearchBar.jsx";
import werkgruppen from "../../public/werkgruppen.json";
import pages from "../../public/pages.json";
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
} from "astro-navbar";
export interface Props {
  title: string;
}

const footerPages = pages.filter((page) => page.Kategorie === "Footer");
const headerPages = pages.filter((page) => page.Kategorie === "Header");
const year = new Date().getFullYear();
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-6xl m-auto p-6 relative">
    <header class="sticky bg-white top-0 print:static">
      <div class="flex justify-center text-center py-5 relative">
        <a class="flex-grow" href="/"
          ><h1 class="text-lg md:text-2xl">
            Werkverzeichnis von Vollrad Kutscher ab 1968
          </h1></a
        >
        <div class="ml-auto w-7 h-7 flex print:hidden">
          <SearchBar client:only />
        </div>
        <div class="lg:hidden ml-2 print:hidden">
          <MenuIcon class="align-center w-7 h-7 text-gray-800" />
        </div>
      </div>

      <nav class="print:hidden">
        <Astronav closeOnClick>
          <MenuItems class="hidden justify-center lg:hidden">
            <Dropdown class="group group:relative bg-gray-200">
              <button
                class="text-lg w-full text-left my-2 mb-0 py-4 px-2 flex items-center"
              >
                <span>Einführung</span>

                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="ml-3 w-3 h-3 group-open:rotate-180"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="group:absolute">
                <div class="">
                  <ul>
                    {
                      headerPages.map((page) => (
                        <li class="py-2">
                          <a
                            class="px-3 py-1 hover:bg-gray-800 hover:text-white cursor-pointer"
                            href={`/allgemein/${page.Slug}`}
                          >
                            {page.Name}
                          </a>
                        </li>
                      ))
                    }
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
            <Dropdown class="group group:relative bg-gray-200">
              <button
                class="text-lg w-full text-left my-2 py-4 px-2 flex items-center mb-0"
              >
                <span>Werkgruppen</span>

                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="ml-3 w-3 h-3 group-open:rotate-180"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="group:absolute">
                {
                  werkgruppen.map((werkgruppe) => (
                    <li class="py-1">
                      <a
                        class="px-3 py-1 hover:bg-gray-800 hover:text-white cursor-pointer"
                        href={`/${werkgruppe.Slug}`}
                      >
                        {werkgruppe.Titel}
                      </a>
                    </li>
                  ))
                }
              </DropdownItems>
            </Dropdown>
            <div class="h-screen"></div>
          </MenuItems>

          <div class="hidden lg:block">
            <MenuItems class="flex w-full bg-gray-200 relative mb-4">
              <Dropdown class="group group:relative bg-gray-200">
                <button
                  class="text-lg text-left my-2  py-4 px-5 flex items-center"
                >
                  <span>Einführung</span>

                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="3"
                    stroke="currentColor"
                    class="ml-3 w-3 h-3 group-open:rotate-180"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                  </svg>
                </button>
                <DropdownItems class="group:absolute absolute bg-gray-200 w-full  left-0">
                  <div class="">
                    <ul>
                      {
                        headerPages.map((page) => (
                          <li class="py-2 m-3">
                            <a
                              class="px-3 py-1 hover:bg-gray-800 hover:text-white cursor-pointer"
                              href={`/allgemein/${page.Slug}`}
                            >
                              {page.Name}
                            </a>
                          </li>
                        ))
                      }
                    </ul>
                  </div>
                </DropdownItems>
              </Dropdown>

              <Dropdown class="group group:relative bg-gray-200l">
                <button
                  class="text-lg w-full text-left my-2 py-4 px-6 flex items-center mb-0"
                >
                  <span>Werkgruppen</span>

                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="3"
                    stroke="currentColor"
                    class="ml-3 w-3 h-3 group-open:rotate-180"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                  </svg>
                </button>
                <DropdownItems class="group:absolute absolute bg-gray-200 w-full left-0 grid grid-cols-4">
                  {
                    werkgruppen.map((werkgruppe) => (
                    <a
                          class="p-3 m-3 cursor-pointer border-2 rounded-lg border-gray-400 hover:border-gray-600 border-solid flex justify-center flex-wrap"
                          href={`/${werkgruppe.Slug}`}
                        >
                  
           
                          <img src={werkgruppe.Thumbnail} class="h-[8vh]"/>
                          <div class="text-center w-full">{werkgruppe.Titel}</div>
                        
                    </a>
                    ))
                  }
                </DropdownItems>
              </Dropdown>
            </MenuItems>
          </div>
        </Astronav>
      </nav>
    </header>
    <div class=""></div>
    <slot />
    <footer class="py-3">
      <nav>
        <ul
          class="flex flex-row flex-wrap bg-gray-200 py-4 px-2 my-3 justify-center print:hidden"
        >
          {
            footerPages.map((page) => (
              <li>
                <a
                  class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                  href={`/allgemein/${page.Slug}`}
                >
                  {page.Name}
                </a>
              </li>
            ))
          }
        </ul>
        <p>Copyright © {year} Vollradkutscher-Werkverzeichnis.de</p>
      </nav>
    </footer>
  </body>
</html>
