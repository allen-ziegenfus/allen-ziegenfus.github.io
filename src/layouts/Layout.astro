---
import SearchBar from "../components/SearchBar.jsx";
import werkgruppen from "../../public/werkgruppen.json";
import pages from "../../public/pages.json";
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
} from "astro-navbar";
export interface Props {
  title: string;
}

const footerPages = pages.filter((page) => page.Kategorie === "Footer");
const headerPages = pages.filter((page) => page.Kategorie === "Header");
const year = new Date().getFullYear();
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-6xl m-auto p-6 relative">
    <header class="sticky bg-white top-0">
      <div class="flex justify-center text-center py-5 relative">
        <a class="flex-grow" href="/"
          ><h1 class="text-2xl">
            Werkverzeichnis von Vollrad Kutscher ab 1968
          </h1></a
        >
        <div class="ml-auto w-7 h-7 flex print:hidden">
          <SearchBar client:only />
        </div>
        <div class="lg:hidden ml-5 print:hidden">
          <MenuIcon class="align-center w-7 h-7 text-gray-800" />
        </div>
      </div>
      <nav class="print:hidden">
        <Astronav closeOnClick>
          <div class="hidden">
            <MenuItems class="justify-center">
              <Dropdown class="group group:relative bg-gray-200">
                <button
                  class="text-lg w-full text-left my-2 py-4 px-2 flex items-center"
                >
                  <span>Einführung</span>

                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="3"
                    stroke="currentColor"
                    class="ml-3 w-3 h-3 group-open:rotate-180"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                  </svg>
                </button>
                <DropdownItems class="group:absolute">
                  <div class="">
                    <ul>
                      {
                        headerPages.map((page) => (
                          <li class="py-2">
                            <a
                              class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                              href={`/allgemein/${page.Slug}`}
                            >
                              {page.Name}
                            </a>
                          </li>
                        ))
                      }
                    </ul>
                  </div>
                </DropdownItems>
              </Dropdown>
              <Dropdown class="group group:relative bg-gray-200">
                <button
                  class="text-lg w-full text-left my-2 py-4 px-2 flex items-center"
                >
                  <span>Werkgruppen</span>

                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="3"
                    stroke="currentColor"
                    class="ml-3 w-3 h-3 group-open:rotate-180"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                  </svg>
                </button>
                <DropdownItems class="group:absolute">
                  {
                    werkgruppen.map((werkgruppe) => (
                      <li class="py-2">
                        <a
                          class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                          href={`/${werkgruppe.Slug}`}
                        >
                          {werkgruppe.Titel}
                        </a>
                      </li>
                    ))
                  }
                </DropdownItems>
              </Dropdown>
            </MenuItems>
          </div>
          <div class="hidden lg:block">
            <MenuItems class="hidden justify-center lg:flex">
              <ul
                class="flex flex-row flex-wrap bg-gray-200 py-4 px-2 my-3 justify-center"
              >
                {
                  headerPages.map((page) => (
                    <li>
                      <a
                        class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                        href={`/allgemein/${page.Slug}`}
                      >
                        {page.Name}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </MenuItems>

            <MenuItems class="hidden justify-center lg:flex sm:hidden">
              <nav>
                <ul class="flex flex-row flex-wrap bg-gray-200 py-4 px-2 my-3">
                  {
                    werkgruppen.map((werkgruppe) => (
                      <li class="py-2">
                        <a
                          class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                          href={`/${werkgruppe.Slug}`}
                        >
                          {werkgruppe.Titel}
                        </a>
                      </li>
                    ))
                  }
                </ul>
              </nav>
            </MenuItems>
          </div>
        </Astronav>
      </nav>
    </header>
    <div class=""></div>
    <slot />
    <footer class="py-3">
      <nav>
        <ul
          class="flex flex-row flex-wrap bg-gray-200 py-4 px-2 my-3 justify-center print:hidden"
        >
          {
            footerPages.map((page) => (
              <li>
                <a
                  class="px-3 py-2 hover:bg-gray-800 hover:text-white cursor-pointer"
                  href={`/allgemein/${page.Slug}`}
                >
                  {page.Name}
                </a>
              </li>
            ))
          }
        </ul>
        <p>Copyright © {year} Vollradkutscher-Werkverzeichnis.de</p>
      </nav>
    </footer>
  </body>
</html>
